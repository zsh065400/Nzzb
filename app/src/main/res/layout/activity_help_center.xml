<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_while"
    android:orientation="vertical"
    tools:context="zzbcar.cckj.com.nzzb.view.activity.itemactivity.HelpCenterActivity">

    <include layout="@layout/activity_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_helper_user1"
            style="@style/helper_text_style"
            android:layout_width="0dp"
            android:drawableTop="@mipmap/helper_user1"
            android:text="用车流程"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/tv_helper_user2"
            style="@style/helper_text_style"
            android:layout_width="0dp"
            android:drawableTop="@mipmap/helper_user2"
            android:text="用车押金"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/tv_helper_user3"
            style="@style/helper_text_style"
            android:layout_width="0dp"
            android:drawableTop="@mipmap/helper_user3"
            android:text="注册审核" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/tv_helper_user4"
            style="@style/helper_text_style"
            android:drawableTop="@mipmap/helper_user4"
            android:text="平台保障"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_helper_user5"
            style="@style/helper_text_style"
            android:layout_width="0dp"
            android:drawableTop="@mipmap/helper_user5"
            android:text="违章处理"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/tv_helper_user6"
            style="@style/helper_text_style"
            android:layout_width="0dp"
            android:drawableTop="@mipmap/helper_user6"
            android:text="账户信息"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/tv_helper_user7"
            style="@style/helper_text_style"
            android:layout_width="0dp"
            android:drawableTop="@mipmap/helper_user7"
            android:text="APP操作指南"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/tv_helper_user8"
            style="@style/helper_text_style"
            android:drawableTop="@mipmap/helper_user8"
            android:text="纠纷处理"
            />
    </LinearLayout>
</LinearLayout>
