<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#eee">
    <LinearLayout
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:id="@+id/top_bar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/row_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="行程详情"
                    android:textColor="#5e5d5d"
                    android:textSize="19sp"/>
                <ImageView
                    android:id="@+id/iv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_candler"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </RelativeLayout>


        <include layout="@layout/item_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="使用剩余时间"
                android:textColor="#807d7d"/>

            <TextView
                android:id="@+id/tv_time_Surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_time_remain"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="29:59"
                android:textColor="#464646"
                android:textSize="26sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#fff">
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="#494747"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231222"
                android:textColor="#5b5a5a"
                android:textSize="16sp"
                android:layout_toRightOf="@id/tv_text"/>

        </RelativeLayout>
        <include layout="@layout/item_divider"/>
        <include layout="@layout/xingcheng_item_car_detail"/>
            <include layout="@layout/item_divider"/>

        <!--模块一-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_margin="10dp"
            android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自行取车："
                android:textSize="16sp"
                android:textColor="#494747"/>
            <TextView
                android:id="@+id/tv_take_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杭州市余杭区东湖街道东湖北路171号"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自行还车："
                android:textSize="16sp"
                android:textColor="#494747"/>

            <TextView
                android:id="@+id/tv_return_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杭州市余杭区东湖街道东湖北路171号"
                android:textSize="16sp"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租赁时长："
                android:textSize="16sp"
                android:textColor="#494747"/>
            <TextView
                android:id="@+id/tv_zunt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50小时"
                android:textSize="16sp"/>

        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <!--模块二-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_margin="10dp"
            android:padding="5dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费用明细"
                android:textSize="18sp"
                android:textColor="#494747"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_car_zujinname"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆租金："
                    android:textSize="16sp"
                    android:textColor="#494747"/>
                <TextView
                    android:id="@+id/tv_zunt_formula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="627×1天"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@id/tv_car_zujinname"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/car_zujin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="627元"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:textColor="#000"

                    />
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="违章押金："
                    android:textSize="16sp"
                    android:textColor="#494747"/>

                <TextView
                    android:id="@+id/tv_illegal_memory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80元"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:textColor="#000"
                   />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_baozhengjin"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆保证金"
                    android:textSize="16sp"
                    android:textColor="#494747"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（线下保证金）"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/tv_baozhengjin"/>

                <TextView
                    android:id="@+id/tv_offline_memory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>


    <include layout="@layout/item_divider"/>

</LinearLayout>

  <RelativeLayout
        android:id="@+id/ll_sure_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
      <TextView
          android:id="@+id/tv_sum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="合计:777"
          android:textSize="20dp"
          android:textColor="@color/sure"
          android:layout_alignParentRight="true"/>

      <TextView
          android:id="@+id/tv_car_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@id/tv_sum"
          android:layout_marginTop="10dp"
          android:layout_toEndOf="@id/tv_sum"
          android:background="@drawable/shape_sure"
          android:gravity="center"
          android:paddingTop="15dp"
          android:text="我要还车"
          android:textColor="#fff"
          android:textSize="16sp" />
  </RelativeLayout>
</LinearLayout>
 </ScrollView>