<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/light_black"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/light_black"
        android:scrollbars="none"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/my_bj" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="#14000000">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <zzbcar.cckj.com.nzzb.view.customview.RoundImageView
                        android:id="@+id/iv_minfragment_head_pic"
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tv_minfragment_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="151****5521"
                        android:textColor="@color/white" />

                    <TextView

                        android:id="@+id/tv_minfragment_car_identifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_car_owner"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:text="+ 车主未认证"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#32000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_my_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的订单"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="10 单"
                            android:textColor="@color/light_while" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#c4c3c3"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_collect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的收藏"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="10 辆"
                            android:textColor="@color/light_while" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
        <View
            android:background="@color/light_while"
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <RelativeLayout
            android:visibility="gone"
            android:background="@color/white"
            android:padding="15dp"
            android:id="@+id/rl_my_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="我的银行卡"
                android:textSize="16sp"
                android:textColor="@color/light_black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>
        <View
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:background="@color/light_while"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <RelativeLayout
            android:background="@color/white"
            android:padding="15dp"
            android:id="@+id/rl_my_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginLeft="15dp"
                android:text="常用地址"
                android:textSize="16sp"
                android:textColor="@color/light_black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="30dp"
            android:background="@color/light_while"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:background="@color/white"
            android:padding="15dp"
            android:id="@+id/rl_my_account_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginLeft="15dp"
                android:text="账号绑定"
                android:textSize="16sp"
                android:textColor="@color/light_black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="30dp"
            android:background="@color/light_while"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:background="@color/white"
            android:padding="15dp"
            android:id="@+id/rl_my_break_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginLeft="15dp"
                android:text="违章专区"
                android:textSize="16sp"
                android:textColor="@color/light_black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="30dp"
            android:background="@color/light_while"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:padding="15dp"
            android:id="@+id/rl_my_invite_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginLeft="15dp"
                android:text="邀请好友"
                android:textSize="16sp"
                android:textColor="@color/light_black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="30dp"
            android:background="@color/light_while"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:padding="15dp"
            android:id="@+id/rl_my_help_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginLeft="15dp"
                android:text="帮助中心"
                android:textSize="16sp"
                android:textColor="@color/light_black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/arrow_right" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="30dp"
            android:background="@color/light_while"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:background="@color/white"
            android:padding="15dp"
            android:id="@+id/rl_my_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="关于至尊宝"
                android:textSize="16sp"
                android:textColor="@color/light_black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>
        <View
            android:background="@color/light_while"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/iv_mine_fragment_carowener_recruit"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:src="@mipmap/carowner_recruit" />
</RelativeLayout>
