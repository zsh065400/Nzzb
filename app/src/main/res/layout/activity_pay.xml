<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete_img"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="19sp"
                android:textColor="#5e5d5d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择支付方式"/>
        </RelativeLayout>
        <include layout="@layout/item_divider" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="20dp"
                android:textColor="#807d7d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付剩余时间"/>
            <TextView
                android:id="@+id/tv_time_remain"
                android:layout_alignBottom="@+id/tv_time_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#464646"
                android:layout_marginTop="8dp"
                android:textSize="26sp"
                android:layout_marginBottom="20dp"
                android:text="29:59"/>
        </LinearLayout>
        <include layout="@layout/item_divider" />
        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="#494747"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租车费用："/>
            <TextView
                android:id="@+id/tv_rend_car_money"
                android:textSize="16sp"
                android:textColor="#d40b0b"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 8000"/>
        </RelativeLayout>
        <LinearLayout
            android:background="#e9e6e6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择支付方式"/>
        </LinearLayout>

        <include layout="@layout/item_divider" />
        <RelativeLayout
            android:id="@+id/rl_alipay"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/alipay_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zhifubao"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/alipay_icon"
                android:text="支付宝支付"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/noselect"/>

        </RelativeLayout>
        <include layout="@layout/item_divider" />
        <RelativeLayout
            android:id="@+id/rl_wxpay"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/wxpay_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wxpay"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/wxpay_icon"
                android:text="微信支付"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yes_or_no_selelct_pay"/>
        </RelativeLayout>
        <include layout="@layout/item_divider" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sure_pay"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape_sure"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="确认支付"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>