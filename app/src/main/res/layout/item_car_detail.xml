<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/item_nodone_fragment">


    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="100dp"
        android:layout_weight="1.5"
        android:src="@mipmap/a" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="110dp"
        android:orientation="vertical">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_car_name"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_weight="0.7"
            android:layout_height="0dp"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:text="奥迪R8" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.6">
            <TextView
                android:id="@+id/tv_car_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/shape_car_model"
                android:gravity="center_vertical"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="自驾"
                android:textColor="@color/car_model"
                android:textSize="14sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_car_detail"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016款 | 4座 | 自动" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_jou_car"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location_icon" />

                <TextView
                    android:id="@+id/tv_car_address"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拱墅区祥园路355号" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
