<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_car_details">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/engine" />

            <TextView
                android:id="@+id/tv_cardetail_engineer"
                android:layout_marginTop="5dp"
                android:textColor="#545454"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发动机" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/seat_number" />

            <TextView
                android:id="@+id/tv_cardetail_seatnum"
                android:layout_marginTop="5dp"
                android:textColor="#545454"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="座椅数" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hand_block" />

            <TextView
                android:id="@+id/tv_cardrtail_handblock"
                android:textColor="#545454"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手动挡" />
        </LinearLayout>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_add_times"
                android:textColor="#4b4a4a"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_to_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3" />

            <ImageView
                android:id="@+id/iv_to_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>