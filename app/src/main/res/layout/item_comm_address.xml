<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_while"/>
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_addr_item_name"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="超哥"/>
        <TextView
            android:id="@+id/tv_addr_item_number"
            android:gravity="right"
            android:textSize="16sp"
            android:text="13712345678"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_addr_item_address"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        android:text="杭州市拱墅区华源创意工场48幢1楼"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_while"/>
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_addr_item_default"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[默认]"
            android:textColor="@color/line_color"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/ll_addr_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:background="@mipmap/address_delete"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ll_addr_item_delete"
            android:id="@+id/ll_addr_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:background="@mipmap/address_edit"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="编辑"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>