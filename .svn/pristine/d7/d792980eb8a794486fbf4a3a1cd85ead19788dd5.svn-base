<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zzbcar.cckj.com.nzzb.view.activity.itemactivity.CarIdentifiActivity">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

      <LinearLayout
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content">
          <ImageView
          android:background="@mipmap/select1"
              android:layout_width="30dp"
              android:layout_height="30dp" />
          <TextView

              android:layout_gravity="center"
              android:textSize="16sp"
              android:textColor="#0f0"
              android:text="身份认证"
              android:layout_marginLeft="8dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

      </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/normal2"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/halfblack"
                android:text="驾驶认证"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
          <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/normal3"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/halfblack"
                android:text="完成认证"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b6adad"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_identificar_idcar_up"
                android:src="@mipmap/identicarup"
                  android:layout_width="match_parent"
                android:layout_height="160dp" />
            <TextView
                android:textSize="16sp"
                android:text="身份证正面"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_identificar_idcar_down"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/identicardowm"
                android:layout_width="match_parent"
                android:layout_height="160dp" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:text="身份证反面"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

           android:textColor="#000"
            android:layout_marginLeft="18sp"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:text="姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

         <ImageView
             android:layout_width="30dp"
             android:layout_height="wrap_content" />
        <EditText

            android:textColor="@color/halfblack"
            android:hint="请输入你的姓名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#000"
            android:layout_marginLeft="18sp"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:text="身份证"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
        <EditText

            android:textColor="@color/halfblack"
            android:hint="请输入你的姓名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:id="@+id/bt_identicar_nest"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="下一步"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
</LinearLayout>
