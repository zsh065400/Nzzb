<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Zzb_BG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <zzbcar.cckj.com.nzzb.view.customview.Gradient
                    android:id="@+id/gradient"
                    android:layout_width="match_parent"
                    android:layout_height="160dp">
                </zzbcar.cckj.com.nzzb.view.customview.Gradient>
            </FrameLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="3dp">

                <RadioButton
                    android:id="@+id/rb_homefragment_self_rent"
                    style="@style/MainRadioButtonStyle"
                    android:drawableTop="@drawable/selector_tab_home"
                    android:text="自驾租车" />

                <RadioButton
                    android:id="@+id/rb_homefragment_business_rent"
                    style="@style/MainRadioButtonStyle"
                    android:drawableTop="@drawable/selector_tab_home"
                    android:text="商务用车" />

                <RadioButton
                    android:id="@+id/rb_homefragment_married_rent"
                    style="@style/MainRadioButtonStyle"
                    android:drawableTop="@drawable/selector_tab_home"
                    android:text="婚庆租车" />
            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="至尊宝共享豪车上线了!"
                android:textColor="#000000" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="点击查看详情" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b6adad" />
        <Button
            android:id="@+id/bt_select_time"
            android:background="#f00"
           android:layout_gravity="center"
            android:text="时间选择器"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/bt_login"
            android:background="#f00"
            android:layout_gravity="center"
            android:text="登陆界面"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/bt_order_pay"
            android:background="#f00"
            android:layout_gravity="center"
            android:text="支付界面"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>
